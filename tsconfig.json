{
    "compilerOptions": {
        "module": "ES2022",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "vite/client",
        ],
        "alwaysStrict": true,
        "lib": [
            "ES2021.String"
        ],
        "baseUrl": ".",
        "paths": {
            "@atomic/*": [
                "./src/components/atomic/*"
            ],
            "@filters/*": [
                "./src/components/filters/*"
            ],
            "@mercs/*": [
                "./src/components/mercs/*"
            ],
            "@bounties/*": [
                "./src/components/bounties/*"
            ],
            "@/*": [
                "./src/*"
            ]
        }
    },
    "exclude": [
        "./node_modules/",
        "./dist/"
    ]
}